<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:animateLayoutChanges="true"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="6dp"

    xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="6dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image_iv"
                android:minHeight="140dp"
                android:maxHeight="180dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Blue polo t-shirt"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/image_iv"
                app:layout_constraintRight_toRightOf="@id/image_iv"
                app:layout_constraintTop_toBottomOf="@id/image_iv" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/image_iv"
                app:layout_constraintLeft_toLeftOf="@id/image_iv"
                app:layout_constraintTop_toBottomOf="@id/title_tv"
                android:text="Here is info about this product man!!"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14sp"
                android:id="@+id/desc_tv"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_to_cart_btn"
                android:background="@drawable/ic_round_add_circle_24"
                android:minHeight="45dp"
                android:minWidth="45dp"
                app:layout_constraintTop_toBottomOf="@id/desc_tv"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="700 EGP"
                app:layout_constraintTop_toTopOf="@id/add_to_cart_btn"
                app:layout_constraintBottom_toBottomOf="@id/add_to_cart_btn"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#325AFF"
                android:id="@+id/price_tv"
                android:layout_marginRight="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

